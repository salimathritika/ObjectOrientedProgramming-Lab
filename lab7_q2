import java.util.Scanner;

class demo
{
    static int count=0;
    demo()
    {
        count++;
    }
}


public class lab7_q2 
{
    // public static int count;
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
    int opt,i=0;
    demo s[]=new demo[100];
    System.out.println("Enter 1 to create object and -1 if you want to stop creating objects:");
    do
    {
        opt=sc.nextInt();
        if(opt!=-1)
           {s[i]=new demo();
            i++;}
    }while(opt!=-1);

    System.out.println("The count:"+demo.count);  //have to access using class name
    }
    

}
